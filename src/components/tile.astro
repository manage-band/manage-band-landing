---
import type { Goal } from '@/types';
export type Props = Goal & {
  id: string;
};
const { id, title, background, styling, img, backgroundImage } = Astro.props;
---

<div
  id={id}
  class={`border rounded-3xl border-transparent py-8 ${
    background ?? 'bg-background-dark'
  }${styling ? ` ${styling}` : ''}${
    backgroundImage ? ' grid md:grid-cols-2' : ' px-12'
  }
  `}
>
  <div
    class=`flex flex-col justify-center items-start h-full ${backgroundImage ? 'px-12' : ''}`
  >
    {img && <img src={img} alt={title} class='mb-4 h-16 w-16' />}
    <h2 class='mb-4 text-white'>{title}</h2>
    <slot name='content' />
  </div>
  {
    backgroundImage && (
      <div class='-m-[1px] hidden md:flex md:justify-end'>
        <img src={backgroundImage} alt={title} class='inset-0 right-0' />
      </div>
    )
  }
</div>
