---
import HeroImage from '@/components/hero-image.astro';
import HeroMessage from '@/components/hero-message.astro';
---

<section class='relative h-full bg-background'>
  <div
    id='bg-img'
    class='absolute inset-0 bg-[url("/bg-mountains.png")] bg-cover bg-center bg-no-repeat opacity-30'
  >
  </div>
  <div class='relative grid h-full place-items-center'>
    <div class='container grid h-full w-full place-items-center'>
      <div
        class='mt-[97px] flex items-center justify-center px-2 lg:grid lg:h-[calc(100%-97px)] lg:grid-cols-2 lg:place-items-center lg:gap-16 lg:px-8'
      >
        <HeroMessage />
        <HeroImage />
      </div>
    </div>
  </div>
</section>
