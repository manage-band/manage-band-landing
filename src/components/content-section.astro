---
export type Props = {
  id: string;
  title: string;
};

const { title, id } = Astro.props;
---

<section id={id} class='flex scroll-mt-24 flex-col items-center'>
  <div class='container space-y-16'>
    <div class='flex flex-col items-center gap-4 container'>
      {
        title && (
          <h2 class='text-center font-extrabold tracking-tight text-6xl'>
            {title}
          </h2>
        )
      }
    </div>
    <p class='max-w-xl text-center font-extrabold text-2xl container'>
      <slot name='lead' />
    </p>
  </div>
</section>
