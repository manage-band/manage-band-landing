---
import '@/styles/global.css';
const { generator, site } = Astro;
const description =
  'Manage.Band is an open-source and privacy-respecting platform for managing your band.';
---

<!doctype html>
<html lang='en' class='h-full motion-safe:scroll-smooth' data-theme='dark'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={generator} />

    <title>Manage.Band</title>
    <meta name='description' content={description} />

    <!-- social media -->
    <meta property='og:title' content='Manage.Band' />
    <meta property='og:type' content='website' />
    <meta property='og:url' content={site} />
    <meta property='og:image' content='/social.jpg' />
    <meta property='og:description' content={description} />
  </head>
  <body class='h-full overflow-x-hidden bg-background text-white'>
    <slot />
  </body>
</html>
